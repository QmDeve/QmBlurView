<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/image" />
        </LinearLayout>
    </ScrollView>

    <com.qmdeve.blurview.widget.BlurTitlebarView
        android:id="@+id/blurTitlebar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurRadius="30dp"
        app:centerTitle="false"
        app:menuIcon="?android:attr/actionModeWebSearchDrawable"
        app:overlayColor="#D1FFFFFF"
        app:showBack="true"
        app:subtitleText="Subheading Test"
        app:titleText="Title Test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.qmdeve.blurview.widget.BlurTitlebarView
            android:id="@+id/blurTitlebar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:blurRadius="30dp"
            app:centerTitle="false"
            app:overlayColor="#D1FFFFFF"
            app:showBack="true"
            app:subtitleText="Subheading Test"
            app:titleText="Title Test" />

        <com.qmdeve.blurview.widget.BlurTitlebarView
            android:id="@+id/blurTitlebar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:blurRadius="30dp"
            app:centerTitle="false"
            app:menuIcon="?android:attr/actionModeWebSearchDrawable"
            app:overlayColor="#D1FFFFFF"
            app:showBack="false"
            app:subtitleText="Subheading Test"
            app:titleText="Title Test" />

        <com.qmdeve.blurview.widget.BlurButtonView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Title set to Center"
            app:blurRadius="12dp"
            app:buttonCornerRadius="12dp"
            app:buttonIconPadding="8dp"
            app:buttonIconSize="24dp"
            app:buttonTextBold="true"
            app:overlayColor="#9CFFFFFF" />

        <com.qmdeve.blurview.widget.BlurButtonView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title set to Left"
            app:blurRadius="12dp"
            app:buttonCornerRadius="12dp"
            app:buttonIconPadding="8dp"
            app:buttonIconSize="24dp"
            app:buttonTextBold="true"
            app:overlayColor="#9CFFFFFF" />
    </LinearLayout>
</RelativeLayout>