<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Video Simulation with Blur"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulates real video playback - no network required!"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textColor="#00C853"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Video container with BlurView overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="20dp">

        <!-- SurfaceView for simulated video -->
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Blur overlay at the bottom -->
        <com.qmdeve.blurview.widget.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            app:blurRadius="25dp"
            app:cornerRadius="0dp"
            app:overlayColor="#80FFFFFF" />

        <!-- Controls overlay on blur -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¬ Blur Effect Active"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch how the dynamic video content is blurred in real-time"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ No buffering â€¢ âœ“ No network â€¢ âœ“ Always works"
                android:textColor="#00C853"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <!-- Info text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How it works:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€¢ Renders dynamic frames at 30 FPS\nâ€¢ Simulates video playback perfectly\nâ€¢ SurfaceView auto-configured for blur\nâ€¢ PixelCopy captures frames in real-time\nâ€¢ Creates realistic video-like content"
        android:textColor="#666666"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3" />

</LinearLayout>
