<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <com.qmdeve.blurview.widget.BlurButtonView
        android:id="@+id/blurViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BlurView"
        app:overlayColor="#0161F2"
        android:textColor="@color/white"
        app:buttonCornerRadius="12dp"/>

    <com.qmdeve.blurview.widget.BlurButtonView
        android:id="@+id/blurButtonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blur Button"
        app:overlayColor="#0161F2"
        android:textColor="@color/white"
        app:buttonCornerRadius="12dp"/>

    <com.qmdeve.blurview.widget.BlurButtonView
        android:id="@+id/progerssiveBlurButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progerssive Blur"
        app:overlayColor="#0161F2"
        android:textColor="@color/white"
        app:buttonCornerRadius="12dp"/>

    <com.qmdeve.blurview.widget.BlurButtonView
        android:id="@+id/blurTitlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blur Titlebar"
        app:overlayColor="#0161F2"
        android:textColor="@color/white"
        app:buttonCornerRadius="12dp"/>

    <com.qmdeve.blurview.widget.BlurButtonView
        android:id="@+id/blurSwitchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blur SwitchButton"
        app:overlayColor="#0161F2"
        android:textColor="@color/white"
        app:buttonCornerRadius="12dp"/>

</LinearLayout>